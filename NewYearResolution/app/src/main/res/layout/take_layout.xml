<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10sp"
    android:layout_marginTop="10sp"
    android:layout_marginEnd="10sp"
    android:layout_marginBottom="10sp"
    android:background="#94BB86FC"
    android:orientation="vertical"
    android:paddingStart="10sp"
    android:paddingTop="10sp"
    android:paddingEnd="10sp"
    android:paddingBottom="10sp"
    android:gravity="center"
    >


    <TextView
        android:id="@+id/action"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="?attr/listPreferredItemHeight"
        android:text="@string/textview"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:orientation="vertical">

        <EditText
            android:id="@+id/nbOccur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/frequence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="?android:attr/windowTitleSize"
            android:gravity="center"
            android:text="fois par" />

        <Spinner
            android:id="@+id/selectFreq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <Button
        android:id="@+id/take"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button"
        android:gravity="center"
        />

</LinearLayout>